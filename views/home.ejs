<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head') %>
    <title>Homepage</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <style>
      /* Ensure card images cover their area without stretching */
      .card-img-top {
        object-fit: cover;
        height: 200px; /* Adjust based on preference */
      }

      @media (max-width: 576px) {
        .card-img-top {
          height: 150px;
        }
      }
    </style>
  </head>
  <body>
    <%- include('./partials/nav') %>

    <div class="container mt-3">
      <div class="row g-4">
        <% blogs.forEach(blog => { %>
        <div class="col-12 col-sm-6 col-md-4 col-lg-3">
          <div class="card h-100">
            <img src="<%= blog.coverImageURL %>" class="card-img-top" alt="Blog cover image" />
            <div class="card-body d-flex flex-column">
              <h5 class="card-title"><%= blog.title %></h5>
              <div class="mt-auto">
                <a href="/blog/<%= blog._id %>" class="btn btn-primary w-100">View</a>
              </div>
            </div>
          </div>
        </div>
        <% }) %>
      </div>
    </div>

    <%- include('./partials/scripts') %>
  </body>
</html>
