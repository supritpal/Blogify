<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head') %>
    <title>Blog</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <style>
      /* Ensure comment text wraps nicely */
      .comment-content {
        white-space: pre-wrap; /* preserves line breaks */
        word-wrap: break-word; /* breaks long words */
      }

      /* Reduce image height for small screens */
      @media (max-width: 576px) {
        .author-img, .comment-img {
          width: 40px !important;
          height: 40px;
        }
      }
    </style>
  </head>
  <body>
    <%- include('./partials/nav') %>

    <div class="container mt-4">
      <div class="row justify-content-center">
        <div class="col-12 col-md-10">
          <h1 class="mb-3"><%= blog.title %></h1>
          <img src="<%= blog.coverImageURL %>" class="img-fluid mb-3 rounded" alt="Blog cover image" />
          <pre class="mt-3"><%= blog.body %></pre>
        </div>
      </div>
    </div>

    <hr />

    <div class="container mt-4">
      <div class="row align-items-center">
        <div class="col-auto">
          <img
            src="<%= blog.createdBy.profileImageURL %>"
            class="rounded-circle author-img"
            width="50"
            height="50"
            alt="Author profile image"
          />
        </div>
        <div class="col">
          <strong><%= blog.createdBy.fullName %></strong>
        </div>
      </div>
    </div>

    <hr />

    <div class="container mt-3">
      <div class="row">
        <div class="col-12">
          <h4>Comments (<%= comments.length %>)</h4>
        </div>
      </div>

      <% if (locals.user) { %>
      <div class="row mt-3">
        <div class="col-12">
          <form action="/blog/comment/<%= blog._id %>" method="post">
            <div class="input-group mb-3">
              <input
                type="text"
                name="content"
                class="form-control"
                placeholder="Enter your comment"
              />
              <button class="btn btn-primary" type="submit">Add</button>
            </div>
          </form>
        </div>
      </div>
      <% } %>

      <div class="row mt-3">
        <div class="col-12">
          <% comments.forEach(comment => { %>
          <div class="d-flex align-items-start mb-3">
            <img
              src="<%= comment.createdBy.profileImageURL %>"
              class="rounded-circle comment-img me-2"
              width="50"
              height="50"
              alt="Commenter profile image"
            />
            <div>
              <strong><%= comment.createdBy.fullName %></strong>
              <p class="comment-content mb-0"><%= comment.content %></p>
            </div>
          </div>
          <% }) %>
        </div>
      </div>
    </div>

    <%- include('./partials/scripts') %>
  </body>
</html>
